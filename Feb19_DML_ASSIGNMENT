--DML ASSIGNMENT
--ONLINE SHOPPING SYSTEM

CREATE TABLE ORDTABLE(
ORDERID INT PRIMARY KEY,
CUSTOMERNAME VARCHAR(60),
PRODUCTNAME VARCHAR(60),
QUANTITY INT,
PRICE DECIMAL(8,2),
ORDERDATE DATE
);

INSERT INTO ORDTABLE(ORDERID,CUSTOMERNAME,PRODUCTNAME,QUANTITY,PRICE,ORDERDATE) VALUES (1, 'AISHWARYA', 'LAPTOP', 3, 2000.00, '2024-10-10');
INSERT INTO ORDTABLE(ORDERID,CUSTOMERNAME,PRODUCTNAME,QUANTITY,PRICE,ORDERDATE) VALUES (2, 'RAVI', 'SPEAKERS', 3, 2000.00, '2024-10-10');
INSERT INTO ORDTABLE(ORDERID,CUSTOMERNAME,PRODUCTNAME,QUANTITY,PRICE,ORDERDATE) VALUES (3, 'RASHMI', 'MPOBILE', 3, 2000.00, '2024-10-10');

SELECT * FROM ORDTABLE;
UPDATE ORDTABLE SET QUANTITY=1 WHERE ORDERID=2;

DELETE FROM ORDTABLE WHERE QUANTITY<2;
